<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fm_background">

        <!-- The numbers and floating point for displayed frequency-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
            <ImageSwitcher
                    android:id="@+id/is_1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="2dip"/>

            <ImageSwitcher
                    android:id="@+id/is_2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="2dip"/>

            <ImageSwitcher
                    android:id="@+id/is_3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="2dip"/>

            <ImageSwitcher
                    android:id="@+id/is_4"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="2dip"/>

            <ImageSwitcher
                    android:id="@+id/is_5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dip"/>
        </LinearLayout>

        <TextView
                android:id="@+id/txtPsText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_marginTop="100dip"
                android:textStyle="bold"
                android:layout_marginLeft="6dip"
                android:textColor="@color/cyan_neon_lighter"
                android:textSize="12dip"/>

        <TextView
                android:id="@+id/txtRadioText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/cyan_neon"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_marginRight="6dip"
                android:layout_toRightOf="@id/txtPsText"
                android:textSize="12dip"
                android:layout_marginTop="100dip"/>

        <ImageView android:id="@+id/imgMode"
                   android:layout_height="wrap_content"
                   android:src="@drawable/fm_stereo"
                   android:layout_width="wrap_content"
                   android:layout_marginTop="12dip"
                   android:layout_marginLeft="13dip"/>

        <ImageView android:id="@+id/imgMute"
                   android:src="@drawable/fm_volume"
                   android:layout_gravity="left"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:layout_marginTop="12dip"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="13dip"/>

    </RelativeLayout>

    <TextView android:id="@+id/txtStatusMsg"
              android:layout_width="wrap_content"
              android:text="@string/statusMsgStopped"
              android:layout_gravity="center_horizontal"
              android:textSize="18dip"
              android:layout_margin="10dip"
              android:textColor="@color/black"
              android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@color/white"
            android:orientation="horizontal">

        <ImageButton android:id="@+id/imgseekdown"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_gravity="center"
                     android:background="@drawable/fm_autosearch_reduce_enable"
                     android:layout_marginLeft="15dip"/>

        <TextureView
                android:layout_weight="1"
                android:layout_height="0dip"
                android:layout_width="0dip"
                android:background="@color/white"
                />

        <ImageButton android:id="@+id/imgseekup"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:layout_marginRight="15dip"
                     android:layout_gravity="center"
                     android:background="@drawable/fm_autosearch_plus_enable">
        </ImageButton>
    </LinearLayout>
</LinearLayout>